@using Orchard.Mvc.Html;
@using Orchard.UI.Resources;
@{
    RegisterLink(new LinkEntry {Type = "image/x-icon", Rel = "shortcut icon", Href = Url.Content("@Href(Html.ThemePath(WorkContext.CurrentTheme, '/Content/Images/Icons/favicon.ico'))")});

    Style.Include("main.css");

    Script.Include("Vendor/modernizr-2.7.1.min.js").AtHead();

    Script.Require("jquery").AtFoot().UseCdn();

    Script.Include("plugins.min.js").AtFoot();
    Script.Include("main.min.js").AtFoot();

    string title = Convert.ToString(Model.Title);
    string siteName = Convert.ToString(WorkContext.CurrentSite.SiteName);
}
